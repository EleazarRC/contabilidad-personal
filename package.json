{
  "name": "contabilidad-personal",
  "version": "1.0.0",
  "description": "Aplicaci√≥n de contabilidad personal",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build-frontend": "cd frontend && npx vite build",
    "dist": "npm run build-frontend && npx electron-builder --win portable",
    "postinstall": "electron-builder install-app-deps"
  },
  "author": "EleazarRC",
  "license": "ISC",
  "dependencies": {
    "express": "^4.18.2",
    "sqlite3": "^5.1.6",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "electron": "^33.0.0",
    "electron-builder": "^25.0.0"
  },
  "build": {
    "appId": "com.eleazarrc.contabilidad-personal",
    "productName": "Contabilidad Personal",
    "forceCodeSigning": false,
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "main.js",
      "backend/**/*",
      "!backend/node_modules/**/*",
      "frontend/dist/**/*"
    ],
    "win": {
      "target": "portable",
      "sign": false
    },
    "portable": {
      "artifactName": "ContabilidadPersonal.exe"
    },
    "asar": false
  }
}
